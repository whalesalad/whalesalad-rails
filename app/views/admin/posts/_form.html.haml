= form_for([:admin, @post]) do |f|
  %fieldset
    
    .field.title
      = f.label :title, 'Title'
      = f.text_field :title

    .field
      = f.label :body, 'Body'
      = f.text_area :body

    .field
      = f.label :link, 'Link'
      = f.text_field :link

    .field
      = f.label :tag_names, 'Tags'
      = f.text_field :tag_names

    .field.checkfield
      = f.check_box :published
      = f.label :published, 'Published'

    .form-actions
      = f.submit :class => 'btn btn-primary'
      = f.submit 'Delete', :name => 'destroy'
    